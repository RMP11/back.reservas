enum TipoEspacio {
  SALON
  AUDITORIO
  CANCHA
  SALA_REUNION
  OTRO
}

model Espacio {
  id               String    @id @default(uuid())
  nombre           String
  descripcion      String?
  capacidad        Int?
  tipoEspacio      TipoEspacio // Por ejemplo: SALON, AUDITORIO, CANCHA
  ubicacion        String?
  reservas         Reserva[]
  fechaCreacion    DateTime  @default(now())
  fechaActualizacion DateTime  @updatedAt
}
